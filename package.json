{
  "name": "keycloakify-foodmission-ui",
  "version": "1.0.0",
  "description": "Custom Keycloak theme for FOODMISSION project using Keycloakify and shadcn/ui",
  "type": "module",
  "scripts": {
    "dev": "vite --config vite.config.ts",
    "dev:keycloak": "keycloakify start-keycloak --keycloak-version 26",
    "build": "vite build",
    "build:keycloak": "npm run build && keycloakify build",
    "storybook": "storybook dev -p 6006",
    "build:storybook": "storybook build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "validate-theme": "node scripts/validate-theme.js",
    "deploy": "./scripts/deploy-theme.sh"
  },
  "dependencies": {
    "@fontsource/open-sans": "^5.2.6",
    "@keycloakify/keycloak-account-ui": "^260200.1.3",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/vite": "^4.1.11",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "keycloakify": "^11.8.57",
    "lucide-react": "^0.536.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@shadcn/ui": "^0.0.4",
    "@storybook/addon-a11y": "^9.1.1",
    "@storybook/addon-docs": "^9.1.1",
    "@storybook/addon-links": "^9.1.1",
    "@storybook/react-vite": "^9.1.1",
    "@storybook/testing-library": "^0.2.2",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.2.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "axe-core": "^4.10.3",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-storybook": "9.1.1",
    "jest-axe": "^10.0.0",
    "jsdom": "^26.1.0",
    "storybook": "^9.1.1",
    "tailwindcss": "^4.1.11",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "keycloak",
    "keycloakify",
    "theme",
    "foodmission",
    "citizen-science",
    "react",
    "typescript"
  ],
  "author": "FOODMISSION Project",
  "license": "MIT"
}
